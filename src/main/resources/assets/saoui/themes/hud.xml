<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bl:hud xmlns:bl="http://www.bluexin.be/com/saomc/saoui/hud-schema">
    <parts>
        <entry>
            <key>HEALTH_BOX</key>
            <value name="health box">
                <x>2.0</x>
                <y>2.0</y>
                <children>
                    <elementGroup name="background">
                        <children>
                            <glRectangle>
                                <h>15.0</h>
                                <texture>saoui:textures/guiEDT.png</texture>
                                <w>16.0</w>
                            </glRectangle>
                            <glRectangle>
                                <h>15.0</h>
                                <srcW>5.0</srcW>
                                <srcX>16.0</srcX>
                                <texture>saoui:textures/guiEDT.png</texture>
                                <w>usernamewidth</w>
                                <x>16.0</x>
                            </glRectangle>
                            <glRectangle>
                                <h>15.0</h>
                                <srcX>21.0</srcX>
                                <texture>saoui:textures/guiEDT.png</texture>
                                <w>234.0</w>
                                <x>16.0 + usernamewidth</x>
                            </glRectangle>
                        </children>
                    </elementGroup>
                    <glString name="username">
                        <text>username</text>
                        <h>15.0</h>
                        <x>16.0</x>
                        <y>1.0</y>
                    </glString>
                    <glRectangle name="health bar">
                        <h>9.0</h>
                        <rgba>
                            healthStep == VERY_LOW? 0xBD0000FF:
                            healthStep == LOW? 0xF40000FF:
                            healthStep == VERY_DAMAGED? 0xF47800FF:
                            healthStep == DAMAGED? 0xF4BD00FF:
                            healthStep == OKAY? 0xEDEB38FF:
                            healthStep == GOOD? 0x93F43EFF:
                            healthStep == CREATIVE? 0xB32DE3FF:
                            0xFFFFFFFF
                        </rgba>
                        <srcH>9.0</srcH>
                        <srcW>215.0 * hpPct</srcW>
                        <srcY>188.0</srcY>
                        <texture>saoui:textures/guiEDT.png</texture>
                        <w>215.0 * hpPct</w>
                        <x>18.0 + usernamewidth</x>
                        <y>3.0</y>
                    </glRectangle>
                    <elementGroup name="hp bg and text">
                        <enabled>!isEnabled(REMOVE_HPXP)</enabled>
                        <children>
                            <glString name="hp text">
                                <text>format("%.0f / %.0f", ceil(hp), ceil(maxHp))</text>
                                <x>usernamewidth + 137</x>
                                <y>20</y>
                                <!--TODO: alt absorb pos (and absorb in general)-->
                            </glString>
                            <elementGroup name="hp bg">
                                <enabled>true</enabled>
                                <children>
                                    <glRectangle>
                                        <x>usernamewidth + 132</x>
                                        <y>12</y>
                                        <srcX>60</srcX>
                                        <srcY>15</srcY>
                                        <w>5</w>
                                        <h>13</h>
                                        <texture>saoui:textures/guiEDT.png</texture>
                                    </glRectangle>
                                    <glRectangle>
                                        <x>usernamewidth + 137</x>
                                        <y>12</y>
                                        <srcX>66</srcX>
                                        <srcY>15</srcY>
                                        <w>strWidth(format("%.0f / %.0f", ceil(hp), ceil(maxHp)))</w>
                                        <h>13</h>
                                        <srcW>5</srcW>
                                        <srcH>13</srcH>
                                        <texture>saoui:textures/guiEDT.png</texture>
                                    </glRectangle>
                                    <glRectangle>
                                        <x>usernamewidth + 137 + strWidth(format("%.0f / %.0f", ceil(hp),
                                            ceil(maxHp)))
                                        </x>
                                        <y>12</y>
                                        <srcX>70</srcX>
                                        <srcY>15</srcY>
                                        <w>5</w>
                                        <h>13</h>
                                        <texture>saoui:textures/guiEDT.png</texture>
                                    </glRectangle>
                                </children>
                            </elementGroup>
                        </children>
                    </elementGroup>
                </children>
            </value>
        </entry>
