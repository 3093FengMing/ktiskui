                                <x>16.0</x>
                            </glRectangle>
                            <glRectangle>
                                <h>15.0</h>
                                <srcX>21.0</srcX>
                                <texture>saoui:textures/guiEDT.png</texture>
                                <w>234.0</w>
                                <x>16.0 + usernamewidth</x>
                            </glRectangle>
                        </children>
                    </elementGroup>
                    <glString name="username">
                        <text>username</text>
                        <h>15.0</h>
                        <x>16.0</x>
                        <y>1.0</y>
                    </glString>
                    <glRectangle name="health bar">
                        <h>9.0</h>
                        <rgba>
                            healthStep == VERY_LOW? 0xBD0000FF:
                            healthStep == LOW? 0xF40000FF:
                            healthStep == VERY_DAMAGED? 0xF47800FF:
                            healthStep == DAMAGED? 0xF4BD00FF:
                            healthStep == OKAY? 0xEDEB38FF:
                            healthStep == GOOD? 0x93F43EFF:
                            healthStep == CREATIVE? 0xB32DE3FF:
                            0xFFFFFFFF
                        </rgba>
                        <srcH>9.0</srcH>
                        <srcW>215.0 * hpPct</srcW>
                        <srcY>188.0</srcY>
                        <texture>saoui:textures/guiEDT.png</texture>
                        <w>215.0 * hpPct</w>
                        <x>18.0 + usernamewidth</x>
                        <y>3.0</y>
                    </glRectangle>
                    <elementGroup name="hp bg and text">
                        <enabled>!isEnabled(REMOVE_HPXP)</enabled>
                        <x>usernamewidth + 132</x>
                        <y>12</y>
                        <children>
                            <glString name="hp text">
                                <text>absorption > 0? format(isEnabled(ALT_ABSORB_POS)? "(+%3$.0f) %1$.0f / %2$.0f":
                                    "%1$.0f (+%3$.0f) / %2$.0f", ceil(hp), ceil(maxHp), ceil(absorption)):
                                    format("%1$.0f / %2$.0f", ceil(hp), ceil(maxHp))
                                </text>
                                <x>5</x>
                                <y>8</y>
                            </glString>
                            <elementGroup name="hp bg">
                                <children>
                                    <glRectangle>
                                        <srcX>60</srcX>
                                        <srcY>15</srcY>
                                        <w>5</w>
                                        <h>13</h>
                                        <texture>saoui:textures/guiEDT.png</texture>
                                    </glRectangle>
                                    <glRectangle>
                                        <x>5</x>
                                        <srcX>66</srcX>
                                        <srcY>15</srcY>
                                        <w>strWidth(absorption > 0? format(isEnabled(ALT_ABSORB_POS)? "(+%3$.0f) %1$.0f
                                            / %2$.0f": "%1$.0f (+%3$.0f) / %2$.0f", ceil(hp), ceil(maxHp),
                                            ceil(absorption)): format("%1$.0f / %2$.0f", ceil(hp), ceil(maxHp)))
                                        </w>
                                        <h>13</h>
                                        <srcW>5</srcW>
                                        <srcH>13</srcH>
                                        <texture>saoui:textures/guiEDT.png</texture>
                                    </glRectangle>
                                    <glRectangle>
                                        <x>5 + strWidth(absorption > 0? format(isEnabled(ALT_ABSORB_POS)? "(+%3$.0f)
                                            %1$.0f / %2$.0f": "%1$.0f (+%3$.0f) / %2$.0f", ceil(hp), ceil(maxHp),
                                            ceil(absorption)): format("%1$.0f / %2$.0f", ceil(hp), ceil(maxHp)))
                                        </x>
                                        <srcX>70</srcX>
                                        <srcY>15</srcY>
                                        <w>5</w>
                                        <h>13</h>
                                        <texture>saoui:textures/guiEDT.png</texture>
                                    </glRectangle>
                                </children>
                            </elementGroup>
                        </children>
                    </elementGroup>
                </children>
            </value>
